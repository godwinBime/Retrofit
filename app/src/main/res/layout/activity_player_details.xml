<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!--androidx.constraintlayout.utils.widget.ImageFilterView-->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgDetailsPlayerID"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/txtDetailsPlayerNameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imgDetailsPlayerID"
        android:textColor="#000"
        android:text="Name: "
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtGenderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Gender:"
        android:textSize="20dp"
        android:layout_below="@+id/txtDetailsPlayerNameId"
        />

    <TextView
        android:id="@+id/txtClubID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:text="Club Name: "
        android:textSize="20dp"
        android:layout_below="@+id/txtGenderID"
        />
    <TextView
        android:id="@+id/txtSiteID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Club Site: "
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/txtClubID"
        />

    <TextView
        android:id="@+id/txtDOBID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date of Birth: "
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/txtSiteID"
        />

    <TextView
        android:id="@+id/txtOriginID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origin of Birth: "
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/txtDOBID"
        />

    <TextView
        android:id="@+id/txtMStatusID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Marital Status: "
        android:textSize="20dp"
        android:textColor="#000"
        android:layout_below="@+id/txtOriginID"
        />


</RelativeLayout>
